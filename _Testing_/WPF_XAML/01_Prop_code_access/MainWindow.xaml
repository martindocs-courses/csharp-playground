<Window x:Class="PropCodeAccess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PropCodeAccess"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>       
        <!-- ver1 to access props -->
        <TextBlock                   
            Name="tbStatus"
            FontSize="25" Grid.RowSpan="4" 
        />

        <!-- ver2 to access props -->
        <TextBlock HorizontalAlignment="Center" Grid.RowSpan="4">
            <TextBlock.Text>
                Some Random Text
            </TextBlock.Text>
        </TextBlock>

        <Button 
            Name="btnToggleRun" 
            Height="50" 
            Width="100" 
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            FontSize="25"
            Content="Run"            
            Click="btnToggleRun_Click" Margin="0,82,0,0" Grid.RowSpan="2" Grid.Row="1" 
        />
        <!-- 
    
            // Subscribe to an event 
            Click="btnRun_Click"        
        -->
    </Grid>
</Window>
